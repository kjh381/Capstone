@model SARDT.Models.WebImage

@{
    ViewBag.Title = "Add Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Images</h2>
@using (Html.BeginForm("AddImage",
                        "WebContent", new { id = Model.WebImageID },
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.WebImageID)
    @Html.HiddenFor(model => model.FileName)
    @Html.HiddenFor(model => model.InUse)

    <label for="file">Upload Image:</label>
    <input type="file" name="file" id="file" /><br><br>
    <div class="form-group">
        @Html.LabelFor(model => model.Caption, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Caption)
            @Html.ValidationMessageFor(model => model.Caption)
        </div>
    </div>
    <input type="submit" value="Upload Image" />
    <br><br>
    @ViewBag.Message
    <br />
}