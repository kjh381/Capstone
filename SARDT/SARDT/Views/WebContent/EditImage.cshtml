@model SARDT.Models.WebImage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>WebImage</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.WebImageID)
        @Html.HiddenFor(model => model.FileName)
        @Html.HiddenFor(model => model.InUse)

        <div>
            <img src="~/Images/@Model.FileName"  width="100" height="100"/>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Caption, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Caption)
                @Html.ValidationMessageFor(model => model.Caption)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Images", "WebImageIndex")
</div>
