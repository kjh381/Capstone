@model SARDT.Models.PublicVM

    @{
        ViewBag.Title = "Home";
    }

    @Html.ActionLink("Im just here for testing purposes", "EditText", "WebContent")

    <!-- Jumbotron -->
    <div class="jumbotron">
        <p>
            @if (Model.currentVideo.Title != "invalid" && Model.currentVideo.URL != "invalid")
            {
                <iframe width="420" height="315" src="@Model.currentVideo.URL"></iframe>
            }
        </p>
    </div>

<!-- TODO: Bootstrap PUSH/PULL to control order when page changes layout -->

    <div class="row">
        <div class="col-sm-12 text-left">
            <h2>@Html.DisplayFor(model => model.textList[0].Section)</h2>
            <p>@Html.DisplayFor(model => model.textList[0].Body)</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-7 text-left">
            <h2>@Html.DisplayFor(model => model.textList[1].Section)</h2>
            <p>@Html.DisplayFor(model => model.textList[1].Body)</p>
        </div>

        <div class="col-sm-5 text-left">
            <figure>
                <img src="~/Images/@Model.imageList[0].FileName" />
                <figcaption>@Model.imageList[0].Caption</figcaption>
            </figure>
        </div>
    </div>

	<div class="panel panel-primary">
        <div class="panel-heading">Events</div>
        <div class="panel-body">
            <div class="col-sm-12">
                    @foreach (var item in Model.eventList)
                    { 
                        if (Model.compareDates(item.EventDate) >= 0)
                        {                         
                            <div class="event">
                                <div class="item row">
                                    <div class="col-sm-2">
                                        <p class="date">@item.EventDate.ToString("d")</p>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="title"> @item.EventTitle</p>
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="eventtime">@Model.ParseMilitaryTime(item.StartTime).ToString("t")</p>
                                    </div>
                                </div>
                                <div class="description row text-left">
                                    <div class="col-sm-12">
                                        <p>@item.Description</p>
                                    </div>
                                </div>
                               </div>
                        }
                    }
                </div>
            </div>
        </div>



    <div class="row">
        <div class="col-sm-5 text-left">
            <figure>
                <img src="~/Images/@Model.imageList[1].FileName" />
                <figcaption>@Model.imageList[1].Caption</figcaption>
            </figure>
        </div>
        <div class="col-sm-7 text-left">
            <h2>@Html.DisplayFor(model => model.textList[2].Section)</h2>
            <p>@Html.DisplayFor(model => model.textList[2].Body)</p>

        </div>
    </div>