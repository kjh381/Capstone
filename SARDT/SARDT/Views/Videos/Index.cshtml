@using SARDT.Models
@model VideoVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            URL
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.AllVideos) {
    <tr>
        <td>
            @Html.DisplayFor(listItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(listItem => item.URL)
        </td>
        <td>
            @if (Model.CurrentVideos.CurrentVideo.ID != item.ID)
            { 
                @Html.ActionLink("Set Current ", "SetCurrent", new { id = item.ID });
            }
            else
            {
                @Html.LabelForModel("Current");
            }
            @Html.LabelForModel(" | ")
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
